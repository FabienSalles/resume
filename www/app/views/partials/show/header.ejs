<div id="header" class="row" ng-controller="ShowCtrl">
    <div class="col-sm-2 col-xs-12">
      <img src="{{ user.avatar }}" alt="Avatar" class="thumbnail img-responsive">      
    </div>
    <div class="col-sm-6 col-xs-12">
        <h2>{{ user.lastName }} {{ user.firstName }}</h2>
        <h3 class="titre">{{ user.description }}</h3>
    </div>
    <div class="col-sm-4 col-xs-12">
      <address>
        <strong>{{ user.lastName }} {{ user.firstName }} </strong><br>
        {{ user.adress }}<br>
        {{ user.city }} {{ user.cp }}<br>
        <i class="fa fa-phone"></i> {{ user.phoneNumber }}<br>
        <i class="fa fa-envelope"></i> <a href="mailto:{{ user.email }}">{{ user.email }}</a> 
      </address>

    <a href="{{ user.facebook }}" class="social-icon soc-facebook animated fadeInDown animation-delay-3"><i class="fa fa-facebook"></i></a>
    <a href="{{ user.twitter }}" class="social-icon soc-twitter animated fadeInDown animation-delay-3"><i class="fa fa-twitter"></i></a>
    <a href="{{ user.google }}" class="social-icon soc-google-plus animated fadeInDown animation-delay-3"><i class="fa fa-google-plus"></i></a>

	</div>
</div>